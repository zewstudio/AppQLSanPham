<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".LoginAccount.StepDangKi">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:src="@drawable/anhlogoapp2"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardCornerRadius="@android:dimen/app_icon_size"
                >
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_login2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:text="Họ và tên "
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edHT_NV_Add"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/icon_user"
                        android:drawablePadding="10dp"
                        android:textCursorDrawable="@drawable/con_tro"
                        android:hint="Nhập họ và tên "
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:text="Giới tính:"
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                    <RadioGroup
                        android:id="@+id/rdGT_NV_Group_Add"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >

                        <RadioButton
                            android:id="@+id/rdGT_NV_Nam_Add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:checked="true"
                            android:text="Nam"
                            android:textColor="@color/white"
                            android:textSize="23dp" />
                        <RadioButton
                            android:id="@+id/rdGT_NV_Nu_Add"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Nữ"
                            android:layout_marginLeft="50dp"
                            android:textSize="23dp"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white"
                            />
                    </RadioGroup>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:text="Ngày Sinh:"
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNS_NV_Add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawablePadding="10dp"
                        android:text="0000-00-00"
                        android:maxLines="1"
                        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@drawable/con_tro"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:text="Số điện thoại:"
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edSDT_NV_Add"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
                        android:drawablePadding="10dp"
                        android:hint="Nhập số điện thoại"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@drawable/con_tro"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:text="Địa chỉ:"
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edDC_NV_Add"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_add_location_alt_24"
                        android:drawablePadding="10dp"
                        android:hint="Nhập địa chỉ hiện tại"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@drawable/con_tro"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_er_pass_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#E11616" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDangKiAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_loin"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="ĐĂNG KÍ"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="25dp"
                        >
                    </androidx.appcompat.widget.AppCompatButton>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>